<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/purple_bg" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_30ssp"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="@dimen/_32sdp"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/user_profile"
            android:layout_marginTop="@dimen/_95sdp"
            android:layout_marginLeft="@dimen/_120sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_160sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/fullname"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_50sdp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            app:strokeWidth="0.3dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="30dp">


            <EditText
                android:id="@+id/profilename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:singleLine="true"
                android:layout_gravity="center"
                android:theme="@style/NoUnderlineEditTextStyle" />



        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="Email"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_50sdp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            app:strokeWidth="0.3dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/profileemail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:singleLine="true"
                android:layout_gravity="center"
                android:theme="@style/NoUnderlineEditTextStyle" />


        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="Password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_50sdp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            app:strokeWidth="0.3dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="30dp">


            <EditText
                android:id="@+id/profilepassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:singleLine="true"
                android:layout_gravity="center"
                android:theme="@style/NoUnderlineEditTextStyle"/>


        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="Country"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_50sdp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            app:strokeWidth="0.3dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="30dp">

            <Spinner
                android:id="@+id/profilecountrySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:backgroundTint="@color/white" />


        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="City"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_50sdp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            app:strokeWidth="0.3dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="30dp">

            <Spinner
                android:id="@+id/profilecitySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="30dp"/>


        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="Profession"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_50sdp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            app:strokeWidth="0.3dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="30dp">

            <Spinner
                android:id="@+id/profileprofessionSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="30dp"/>


        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_purple"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_80sdp"
            android:text="Save"
            android:textColor="@color/white"
            app:backgroundTint="#59239E"
            app:cornerRadius="32dp" />
    </LinearLayout>

</RelativeLayout>